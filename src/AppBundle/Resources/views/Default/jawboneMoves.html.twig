{% extends "::base.html.twig" %}

{% block body %}
<div class="container moves">
	<div class="row titre_page">
		<div class="bloc_rouge"></div>
		<div class="bloc_titre">
			<h1>Déplacements</h1>
		</div>
	</div>
	<section class="moves">
		{% if json|length != 0 %}
			<table>
				<tr>
					<th>Date</th>
					<th>Distance</th>
					<th>Temps d'activité</th>
					<th>Nombre de pas</th>
				</tr>
				{% for key, day in json.global.days %}
					<tr>
						<td>{{ key }}</td>
						<td>{{ day.distance }}m</td>
						<td>{{ day.active_time }}s</td>
						<td>{{ day.steps }}</td>
					</tr>
				{% endfor %}
			</table>
		{% else %}
			<p>Vous n'avez pas d'activité ou d'objet enregistré !</p>
		{% endif %}
	</section>
</div>
{% endblock %}
