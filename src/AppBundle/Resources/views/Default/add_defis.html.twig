{% extends "::base.html.twig" %}
{% block body %}
	<div class="container apropos">
		<div class="row titre_page">
			<div class="bloc_rouge"></div>
			<div class="bloc_titre">
				<h1>Lancer un défi</h1>
			</div>
		</div>
		<div class="row">
			<ul id="tabs_add_defis" class="tabs">
				<li class="tab col s3"><a class="active" href="#idoit">IDO'IT !</a></li>
				<li class="tab col s3"><a href="#kanudoit">KANUDO'IT ?</a></li>
			</ul>
			<div id="idoit" class="col s12">
				<form action="{{ path('add_defis') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
					<div class="row">
						<div class="bande_rouge">
							<div class="col s12">Ajouter un défi</div>
						</div>
						<div class="card-panel">
							<div class="input-field form-group col s12">
								{{ form_widget(form.title, { 'attr': {'class': 'form-control' } }) }}
								{{ form_errors(form.title) }}
								<label for="title">Titre du défis</label>
							</div>
							<div class="input-field form-group col s12 m6">
								{{ form_widget(form.endDate, { 'attr': {'class': 'form-control' } }) }}
								{{ form_errors(form.endDate) }}
								<label for="endDate">Date de fin</label>
							</div>
							<div class="input-field form-group col s12 m6">
								{{ form_widget(form.activity, { 'attr': {'class': 'form-control'} }) }}
								{{ form_errors(form.activity) }}
								<label for="activity">Activité correspondante</label>
							</div>
							<div class="input-field form-group col s12">
								<a class="waves-effect waves-light btn modal-trigger-ajax" href="#getDataChallenge">Récupérer sa performance</a>
							</div>
							{{ form_rest(form) }}
							{{ form_errors(form) }}
							<div class="form-group">
								<div class="btn_centre">
									<input type="submit" value="Kanudo'it ?" class="btn btn-primary btn-block btn-lg" title="s'inscrire">
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
			<div id="kanudoit" class="col s12">
				<form action="{{ path('add_defis') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
					<div class="row">
						<div class="bande_rouge">
							<div class="col s12">Ajouter un défi</div>
						</div>
						<div class="card-panel">
							<div class="input-field form-group col s12">
							</div>
							<div class="form-group">
								<div class="btn_centre">
									<input type="submit" value="{{ "Kanudo'it ?" |trans({}, 'FOSUserBundle') }} "class="btn btn-primary btn-block btn-lg" tabindex="7" title="s'inscrire">
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- Modal Structure -->
	<div id="getDataChallenge" class="modal modal-fixed-footer">
		<div class="modal-content">
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Agree</a>
		</div>
	</div>
{% endblock %}