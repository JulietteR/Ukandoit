<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
	<div class="container registration" id="fos_user_registration_form">
		<div class="row">

			<div class="bande_rouge col s12">Mes informations</div>

			<div class="card-panel">
<div class="row">
				<div class="col s12 m6">
					<div class="input-field form-group col s12">
						{{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'placeholder': "Prénom"|trans } }) }}
						{{ form_errors(form.firstname) }}
					</div>
					<div class="input-field form-group col s12">
						{{ form_widget(form.lastname, { 'attr': {'class': 'form-control', 'placeholder': "Nom"|trans } }) }}
						{{ form_errors(form.lastname) }}
					</div>

					<div class="input-field form-group col s12">
						{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'|trans } }) }}
						{{ form_errors(form.email) }}
					</div>
					<div class="input-field col s12">
						<div class="form-group">
							{{ form_widget(form.current_password, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'|trans } }) }}
							{{ form_errors(form.current_password) }}
						</div>
					</div>
				</div>
				<div class="col s12 m6">

						{{ form_widget(form.avatar, { 'attr': {'class': 'file-path validate' } }) }}
						{{ form_errors(form.avatar) }}


				</div>
				
</div>

				{{ form_rest(form) }}
				<div class="form-group row">
				
					<div class="btn_centre">
						<input type="submit" value="{{ 'Sauvegarder'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary btn-block btn-lg" tabindex="7" title="Sauvegarder" />
					</div>
				</div>

			</div>
		</div>

	</div>
</form>

<div class="change-password">
	<a class="waves-effect waves-teal btn-flat" href="{{ path('fos_user_change_password') }}" title="Changer mon mot de passe">Changer mon mot de passe</a>
</div>

<div class="delete">
	<a class="waves-effect waves-teal btn-flat" href="{{ path('user_delete') }}"  onclick="return confirm('Êtes-vous sûr(e) de vouloir supprimer votre compte ? Cette action est irréversible')" title="Supprimer mon compte">Supprimer mon compte</a>
</div>