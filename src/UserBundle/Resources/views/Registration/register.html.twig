	$( document ).ready(function() {
		{% if form_errors(form.email) and form_errors(form.username)%}

		toastr.error("Ce Mail et ce Pseudo sont déjà utilisés");

		{% elseif form_errors(form.username)  %}

		toastr.error("Ce pseudo est déjà utilisé");
