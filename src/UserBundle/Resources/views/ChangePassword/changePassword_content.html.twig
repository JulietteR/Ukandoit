<section class="titre_page">
	<div class="row">
		<div class="bloc_rouge"></div>
		<div class="bloc_titre">
			<h1>Mot de passe</h1>
		</div>
	</div>
</section>

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
	<div class="container">
		<div class="row">
			<div class="col s12">
				<div class="bande_rouge">Mot de passe</div>

				<div class="card-panel">    
					<div class="input-field form-group col s12">
						{{ form_widget(form.current_password) }}
						<label>Ancien mot de passe</label>
						{{ form_errors(form.current_password) }}
					</div>
					<div class="input-field form-group col s12">
						{{ form_widget(form.new.first) }}
						<label>Nouveau mot de passe</label>
						{{ form_errors(form.new.first) }}
					</div>
					<div class="input-field form-group col s12">
						{{ form_widget(form.new.second) }}
						<label>Confirmation</label>
						{{ form_errors(form.new.second) }}
					</div>
					{{ form_rest(form) }}
					<div>
						<input type="submit" class="btn btn-primary btn-block btn-lg" value="{{ 'Sauvegarder'|trans({}, 'FOSUserBundle') }}" />
					</div>
			<div class="bande_rouge">Mot de passe</div>

			<div class="card-panel">    
				<div class="input-field form-group col s12">
					{{ form_widget(form.current_password) }}
					<label>Ancien mot de passe</label>
					{{ form_errors(form.current_password) }}
				</div>
				<div class="input-field form-group col s12">
					{{ form_widget(form.new.first) }}
					<label>Nouveau mot de passe</label>
					{{ form_errors(form.new.first)}}
				</div>
				<div class="input-field form-group col s12">
					{{ form_widget(form.new.second) }}
					<label>Confirmation</label>
					{{ form_errors(form.new.second)}}
				</div>
			</div>
		</div>

	</div>
</form>
